<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Firefox Home</title>

    <script type="text/javascript" src="/javascripts/jquery-2.0.0.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/desktop-style.css' />
    <style>
      body {
        text-align: center;
        width: 100%;
        height: 100%;
        background-image: url("/images/noise2.png");
        padding: 0;
        margin: 0;
        padding-top: 10%;
      }

      #launcher {
        background-color: rgba(0,0,0,0.06);
        width: 100%;
        height: 96px;
        bottom: 0px;
        position: absolute;
      }

      #menu {
        background: url("/images/menu.png") no-repeat;
        position: absolute;
        bottom: 0px;
        left: 50%;
        height: 96px;
        width: 542px;
        margin: 0 -271px;
      }

      #picl-menu-item {
        border: 1px solid transparent;
        border-radius: 2.5px 2.5px 2.5px 2.5px;
        cursor: pointer;
        transition-property: background-color, border-color, box-shadow;
        transition-duration: 150ms;
        position: absolute;
        bottom: 5px;
        display: block;
        left: 368px;
        width: 85px;
        height: 85px;
        text-decoration: none;
      }

      #picl-menu-item:hover {
        border: 1px solid rgba(0,0,0,0.2);
      }

      #picl-account {
        position: absolute;
        text-aligh: right;
        right: 20px;
        top: 10px;
      }
      #picl-account a {
        text-decoration: none;
      }
    </style>
  </head>

  <body>
    <div id="picl-account">
      <a href="/flow">Sign in</a>
    </div>

    <img id="search" src="/images/search.png" alt=""/>

    <div id="launcher">
      <div id="menu">
        <a href="/flow" id="picl-menu-item">&nbsp;</a>
      </div>
    </div>

    <script>
    var user = <%- JSON.stringify(user || null) %>;
    var verified = <%- JSON.stringify(verified || false) %>;
    if (user && verified) {
      $('#picl-account a').html('Signed in as ' + user);
    }

    var device = navigator.userAgent.match('Mobile') ? 'mobile' :
                   navigator.userAgent.match('Tablet') ? 'tablet' :
                   'desktop';

    if (device === 'mobile' || device === 'tablet') {
      window.location = '/m';
    }
    </script>
  </body>
</html>

